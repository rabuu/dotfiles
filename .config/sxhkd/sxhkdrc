#
# sxhkd
#

super + Escape
	pkill -USR1 -x sxhkd; \
	notify-send "sxhkd restarted"
#
# media keys
#

XF86MonBrightness{Down,Up}
	brightnessctl s 5%{-,+}

XF86Audio{Raise,Lower}Volume
	pamixer -{i,d} 2; \
	simbar --once

XF86AudioMute
	pamixer -t; \
	simbar --once

XF86AudioMicMute
	amixer set Capture toggle; \
	simbar --once

XF86Audio{Play,Stop,Next,Prev}
	playerctl {play-pause,stop,next,previous}

#
# dwm
#

super + q
	dwmc quit

super + c
	dwmc killclient

super + b
	dwmc togglebar

super + f
	dwmc togglefloating

super + ctrl + Return
	dwmc togglefullscr

super + {_,ctrl +}{_,shift +} {1-9}
	dwmc {_,toggle}{viewex,tagex} {0-8}

super + 0
	dwmc viewall

super + Tab
	dwmc view

super + {j,k}
	dwmc focusstack {+,-}1

super + shift + {j,k}
	dwmc movestack {+,-}1

super + shift + Return
	dwmc zoom

super + {period,comma}
	dwmc focusmon {+,-}1

super + shift + {period,comma}
	dwmc tagmon {+,-}1

super + {l,h}
	dwmc setmfact {+,-}0.05

super + ctrl + {t,f,m}
	dwmc setlayoutex {0,1,2}

super + {i,d}
	dwmc incnmaster {+,-}1

#
# rofi & Co
#

super + p
	rofi -show drun

super + r
	rofi -show run

super + shift + p
	passrofi

super + ctrl + p
	pwr dmenu

#
# program hot keys
#

super + Return
	$TERMINAL

super + shift + b
	$BROWSER

super + shift + e
	emacs

#
# more
#

# lock screen
super + ctrl + l
	xss-lock $LOCKER
